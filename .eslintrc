{
  "parser": "babel-eslint",
  "rules": {
    "indent": [2, 2],
    "linebreak-style": [2, "unix"],
    "quotes": [2, "single"],
    "no-undef": 2,
    "no-unused-vars": 0, /* see https://github.com/babel/babel-eslint/issues/21 */
    "semi": [2, "always"]
  },
  "env": {
    "node": true,
    "mocha": true,
    "es6": true,
    "browser": true
  },
  "extends": "eslint:recommended"
}
